/*
 * Mandatory:
 *
 * vars.rsync.user
 * vars.rsync.password
 */
bb-rsync-passwords-secret-yaml(parent, vars) ::= <<
apiVersion: v1
kind: Secret
metadata:
  name: rsync-passwords
  labels:
    app: rsync
    tier: backend
    group: cloud-muellerpublic-de
  namespace: cloud-muellerpublic-de
type: Opaque
data:
  user: <vars.rsync.user;format="base64">
  password: <vars.rsync.password;format="base64">

>>
